<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" type="text/css" href="../Scripts/layui/css/layui.css" media="all" />
    <style>
        body {
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="layui-form-item">
        <div class="layui-inline">
            <button class="layui-btn" onclick="javascript:window.location.href='userop.html'">增加</button>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">
                用户名
            </label>
            <div class="layui-input-inline">
                <input type="text" id="txtKw" lay-verify="required" autocomplete="off" class="layui-input" />
            </div>
            <button id="btnSearch" class="layui-btn layui-btn-normal layui-bg-green"><i class="layui-icon">&#xe615;</i></button>
            <button id="btnReset" class="layui-btn layui-btn-normal layui-bg-green"><i class="layui-icon">&#x1002;</i></button>
        </div>
    </div>

    <table class="layui-table" id="userlist" lay-filter="test"></table>
    <script type="text/html" id="photoTpl">
        <img src="{{d.UserPhoto}}"/>
    </script>
    <script type="text/html" id="nameTpl">
        <a href="javascript:show('{{d.UserGuid}}');">{{=d.UserName }}</a>
    </script>
    <script type="text/html" id="examTpl">
        <a href="javascript:show('{{d.UserGuid}}');">点击查看</a>
    </script>
    <script type="text/html" id="actionTpl">
        <a class="layui-btn layui-btn-xs" href="userop.html?id={{d.UserGuid}}">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="reset">重置密码</a>
    </script>
    <script type="text/javascript" src="../Scripts/layui/layui.js"></script>
    <script>

        layui.use('table', function () {
            var table = layui.table;
            var $ = layui.jquery;

            table.render({
                id: "userlist",
                elem: "#userlist",
                page: true, limit: 10,
                cellMinWidth: 100,
                url: "../tools/UserHandler.ashx?action=getlist",
                cols: [[{ field: "UserPhoto", title: "头像", templet: '#photoTpl', width: 120 }, { field: "UserName", title: "用户名", templet: "#nameTpl" }, { field: "LoginName", title: "登录账号", width: 120 }, { field: "UserPhone", title: "电话", width: 120 }, { field: "UserGuid", title: "操作", templet: "#actionTpl", width: 190 }]]
            })

            $("#btnSearch").click(function () {
                var kw = $.trim($("#txtKw").val());
                table.reload("userlist", { where: { kw: kw } });
            });
            $("#btnReset").click(function () {
                $("#txtKw").val("");
                table.reload("userlist", { where: { kw: "" } });
            });

            table.on('tool(test)', function (obj) {
                var data = obj.data;
                if (obj.event === 'del') {
                    layer.confirm('确定要删除该用户?', function (index) {

                        $.ajax({
                            url: "../tools/UserHandler.ashx",
                            data: { action: "delete", id: data.UserGuid },
                            dataType: "json",
                            type: "post",
                            success: function (json) {
                                layer.close(index);
                                var ii = layer.alert(json.msg, function (index) {
                                    layer.close(ii);
                                    if (json.status == 1) {
                                        table.reload("userlist", { url: "../tools/UserHandler.ashx?action=getlist" });
                                    }
                                });
                            }, error: function () { }
                        })
                    });
                } else if (obj.event === "reset") {
                    layer.confirm('确定要将该用户密码重置为[a123456]?', function (index) {
                        $.ajax({
                            url: "../tools/UserHandler.ashx",
                            data: { action: "resetpwd", id: data.UserGuid },
                            dataType: "json",
                            type: "post",
                            success: function (json) {
                                layer.close(index);
                                var ii = layer.alert(json.msg, function (index) {
                                    layer.close(ii);

                                });
                            }, error: function () { }
                        })
                    });
                }
            });

        });
        function show(d) {
            layer.open({
                type: 2,
                title: "详情",
                shade: false,
                area: ['500px','500px'],
                maxmin: true,
                content: 'usershow.html?id='+d,
                shade: [0.8, '#393D49'],
                zIndex: layer.zIndex, //重点1
                success: function (layero) {
                    layer.setTop(layero); //重点2
                }
            });
        }
    </script>

</body>
</html>
